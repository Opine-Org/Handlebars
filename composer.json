{
    "name": "opine/handlebars",
    "type": "library",
    "description": "Wrapper to Zordius LightnCandy Handlebars PHP compiler for compiling all layouts and partials in opine projects",
    "keywords": ["handlebars"],
    "license": "MIT",
    "authors": [
        {
            "name"    : "Ryan Mahoney",
            "email"   : "ryan@virtuecenter.com",
            "homepage": "http://opine-php.org",
            "role"    : "Developer"
        }
    ],
    "require": {
        "php"              : ">=5.4.0",
        "opine/db"         : "~2.0",
        "opine/container"  : "~2.0",
        "opine/lightncandy": "~1.0",
        "opine/bundle"     : "~2.0",
        "opine/layout"     : "~2.0",
        "opine/helper"     : "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.32"
    },
    "autoload": {
        "psr-4": {"Opine\\Handlebars\\": "src/"}
    },
    "version": "2.0.6"
}